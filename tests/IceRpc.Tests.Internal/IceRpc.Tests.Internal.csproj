<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <TargetFramework>net6.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <RunSettingsFilePath>$(MSBuildThisFileDirectory)..\test.runsettings</RunSettingsFilePath>
    <ThreadPoolMinThreads>50</ThreadPoolMinThreads>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Shared\LogAttribute.cs" Link="LogAttribute.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="3.0.3">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0-preview.5.21301.5" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0-preview.5.21301.5" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.11.0-release-20210626-04" />
    <PackageReference Include="NUnit.Analyzers" Version="3.1.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.0.0" />
    <PackageReference Include="NUnit" Version="3.13.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\IceRpc\IceRpc.csproj" />
    <ProjectReference Include="..\IceRpc.Tests.ReferencedAssemblies\A\A.csproj" />
    <!-- Do not refercence the assemblies below, this ensures that factories are not automatically registered
         see AssemblyLoadTests -->
    <ProjectReference Include="..\IceRpc.Tests.ReferencedAssemblies\B\B.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\IceRpc.Tests.ReferencedAssemblies\C\C.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\IceRpc.Tests.ReferencedAssemblies\D\D.csproj" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="generated\" />
  </ItemGroup>

</Project>
