<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Title>IceRpc .NET library</Title>
        <PackageVersion>$(IceRpcVersion)</PackageVersion>
        <Authors>ZeroC</Authors>
        <PackageLicenseExpression>GPL-2.0-only</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/zeroc-ice/icerpc-csharp</PackageProjectUrl>
        <PackageIcon>logo.png</PackageIcon>
        <Copyright>Copyright (c) ZeroC, Inc.</Copyright>
        <Description>IceRPC C#/.NET SDK.</Description>
        <PackageReleaseNotes>TODO</PackageReleaseNotes>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageTags>IceRPC</PackageTags>
    </PropertyGroup>
    <ItemGroup>
      <SliceC Include="../../slice/$(AssemblyName)/*.slice" OutputDir="$(MSBuildProjectDirectory)/generated" />
      <SliceC Include="../../slice/Ice/Object.slice" OutputDir="$(MSBuildProjectDirectory)/generated" />
      <SliceC Include="../../slice/$(AssemblyName)/Internal/*.slice" OutputDir="$(MSBuildProjectDirectory)/generated/Internal" />
      <SliceC Include="../../slice/$(AssemblyName)/Slice/*.slice" OutputDir="$(MSBuildProjectDirectory)/Slice/generated" />
      <SliceC Include="../../slice/$(AssemblyName)/Slice/Internal/*.slice" OutputDir="$(MSBuildProjectDirectory)/Slice/Internal/generated" />
      <SliceC Include="../../slice/$(AssemblyName)/Transports/*.slice" OutputDir="$(MSBuildProjectDirectory)/Transports/generated" />
      <SliceC Include="../../slice/$(AssemblyName)/Transports/Internal/*.slice" OutputDir="$(MSBuildProjectDirectory)/Transports/Internal/generated" />
    </ItemGroup>
    <!-- NuGet package contents-->
    <ItemGroup>
      <Content Include="..\..\LICENSE">
        <PackagePath></PackagePath>
        <Pack>true</Pack>
      </Content>
      <Content Include="..\..\tools\slicec-cs\target\$(RustConfiguration)\$(SliceCompilerExe)">
          <PackagePath>tools</PackagePath>
          <Pack>true</Pack>
      </Content>
      <None Include="..\..\build\logo.png">
          <Pack>True</Pack>
          <PackagePath>.</PackagePath>
      </None>
      <Content Include="icerpc.props">
          <Pack>true</Pack>
          <PackagePath>build</PackagePath>
      </Content>
      <Content Include="..\..\slice\**\*.slice">
        <Pack>true</Pack>
        <PackagePath>slice</PackagePath>
      </Content>
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
      <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="System.IO.Pipelines" Version="$(NetRuntimeVersion)" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="$(NetRuntimeVersion)" />
      <PackageReference Include="IceRpc.Builder.MSBuild" Version="$(IceRpcBuilderVersion)" PrivateAssets="All" />
    </ItemGroup>
</Project>
