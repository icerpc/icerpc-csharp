<Rule
    Name="SliceC"
    DisplayName="IceRPC Tools"
    PageTemplate="generic"
    Order="201"
    Description="IceRPC tools project settings"
    xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.DataSource>
        <DataSource
            Persistence="ProjectFile"
            ItemType=""
            Label="IceRpcTools"
            HasConfigurationCondition="false"
            SourceOfDefaultValue="AfterContext"/>
    </Rule.DataSource>

    <StringProperty
        Name="OutputDir"
        DisplayName="Output Directory"
        Description="Directory of C# source files generated by slicec-cs."
        Subtype="folder"
        Category="General">
        <StringProperty.DataSource>
            <DataSource
                Persistence="ProjectFile"
                ItemType="SliceC"
                Label="IceRpcTools"
                HasConfigurationCondition="false"
                SourceOfDefaultValue="AfterContext"/>
        </StringProperty.DataSource>
    </StringProperty>

    <StringListProperty
        Name="ReferencedFiles"
        DisplayName="Referenced Files"
        Description="Specifies one or more directories or files to pass to the slicec-cs Slice compiler as references; use semi-colons (;) as separator."
        Subtype="folder"
        Category="General">
        <StringListProperty.DataSource>
            <DataSource
                Persistence="ProjectFile"
                ItemType="SliceC"
                Label="IceRpcTools"
                HasConfigurationCondition="false"
                SourceOfDefaultValue="AfterContext"/>
        </StringListProperty.DataSource>
    </StringListProperty>

    <StringListProperty
        DisplayName="Additional Options"
        Name="AdditionalOptions"
        Description="Additional command-line options to pass to the slicec-cs Slice compiler.">
        <StringListProperty.DataSource>
            <DataSource
                Persistence="ProjectFile"
                ItemType="SliceC"
                Label="IceRpcTools"
                HasConfigurationCondition="false"
                SourceOfDefaultValue="AfterContext"/>
        </StringListProperty.DataSource>
    </StringListProperty>
</Rule>
