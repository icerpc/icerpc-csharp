<Rule
    Name="SliceFile"
    DisplayName="Slice Tools"
    PageTemplate="SliceTools"
    Description="Slice tools properties for Slice files"
    xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.DataSource>
        <DataSource
            Persistence="ProjectFile" 
            Label="SliceTools"
            HasConfigurationCondition="false"
            ItemType="SliceFile" 
            SourceOfDefaultValue="AfterContext"/>
    </Rule.DataSource>

    <Rule.Categories>
        <Category Name="SliceTools" DisplayName="Slice Tools" />
    </Rule.Categories>

    <StringProperty
        Name="OutputDir"
        DisplayName="Output Directory"
        Description="Directory of C# source files generated by slicec-cs."
        Subtype="folder"
        Visible="true"
        Category="SliceTools">
        <StringProperty.DataSource>
            <DataSource
                Persistence="ProjectFile"
                ItemType="SliceFile"
                Label="SliceTools"
                HasConfigurationCondition="false"
                SourceOfDefaultValue="AfterContext"/>
        </StringProperty.DataSource>
    </StringProperty>

    <StringListProperty
        Name="ReferencedFiles"
        DisplayName="Referenced Files"
        Description="Specifies one or more directories or files to pass to the slicec-cs Slice compiler as references; use semi-colons (;) as separator."
        Subtype="folder"
        Visible="true"
        Category="SliceTools">
        <StringListProperty.DataSource>
            <DataSource
                Persistence="ProjectFile"
                ItemType="SliceFile"
                Label="SliceTools"
                HasConfigurationCondition="false"
                SourceOfDefaultValue="AfterContext"/>
        </StringListProperty.DataSource>
    </StringListProperty>

    <StringListProperty
        DisplayName="Additional Options"
        Name="AdditionalOptions"
        Description="Additional command-line options to pass to the slicec-cs Slice compiler."
        Visible="true"
        Category="SliceTools">
        <StringListProperty.DataSource>
            <DataSource
                Persistence="ProjectFile"
                ItemType="SliceFile"
                Label="SliceTools"
                HasConfigurationCondition="false"
                SourceOfDefaultValue="AfterContext"/>
        </StringListProperty.DataSource>
    </StringListProperty>

</Rule>
