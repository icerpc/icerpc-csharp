<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Description>IceRPC for C#.</Description>
        <AssemblyTitle>$(Description)</AssemblyTitle>
        <PackageTags>IceRPC;RPC</PackageTags>
    </PropertyGroup>
   <ItemGroup>
        <SliceFile
            Include="../../slice/WellKnownTypes/*.slice"
            OutputDir="$(MSBuildProjectDirectory)/generated"
            Pack="true"
            PackagePath="slice/WellKnownTypes"/>
        <SliceFile
            Include="../../slice/$(AssemblyName)/*.slice"
            OutputDir="$(MSBuildProjectDirectory)/generated"
            Pack="true"
            PackagePath="slice/$(AssemblyName)"/>
        <SliceFile
            Include="../../slice/Ice/IdentityPath.slice;../../slice/Ice/Object.slice"
            OutputDir="$(MSBuildProjectDirectory)/generated"
            Pack="true"
            PackagePath="slice/Ice" />
        <SliceFile Include="../../slice/$(AssemblyName)/Internal/*.slice" OutputDir="$(MSBuildProjectDirectory)/generated/Internal" />
        <SliceFile Include="../../slice/$(AssemblyName)/Slice/Internal/*.slice" OutputDir="$(MSBuildProjectDirectory)/Slice/Internal/generated" />
        <SliceFile Include="../../slice/$(AssemblyName)/Transports/Slic/Internal/*.slice" OutputDir="$(MSBuildProjectDirectory)/Transports/Slic/Internal/generated" />
        <!-- Reference the built-in Slice files -->
        <SliceDirectory Include="$(MSBuildThisFileDirectory)../../slice" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Slice\Slice.csproj" ExactVersion="true" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
        <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="System.IO.Pipelines" Version="$(NetRuntimeVersion)" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="$(NetRuntimeVersion)" />
    </ItemGroup>
    <!-- NuGet package contents-->
    <ItemGroup>
        <Content Include="..\..\LICENSE" Pack="true" PackagePath="\" />
        <Content Include="README.md" Pack="true" PackagePath="\" />
        <None Include="..\..\build\logo.png" Pack="true" PackagePath="\" />
        <Content Include="IceRpc.props" Pack="true" PackagePath="build" />
    </ItemGroup>
</Project>
