<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <EnableDefaultSliceCItems Condition="'$(EnableDefaultSliceCItems)' == ''">true</EnableDefaultSliceCItems>
    </PropertyGroup>
    <Choose>
        <When Condition="Exists('$(MSBuildThisFileDirectory)..\..\..\slicec-cs')">
            <!-- Use Slice files and Slice compiler from this source build -->
            <PropertyGroup>
                <IceRpcToolsToolsPath Condition="'$(Configuration)' == 'Debug'">$(MSBuildThisFileDirectory)..\..\..\slicec-cs\target\debug</IceRpcToolsToolsPath>
                <IceRpcToolsToolsPath Condition="'$(Configuration)' == 'Release'">$(MSBuildThisFileDirectory)..\..\..\slicec-cs\target\release</IceRpcToolsToolsPath>
                <IceRpcToolsBuiltInReferencedFiles>$(MSBuildThisFileDirectory)..\..\..\..\slice</IceRpcToolsBuiltInReferencedFiles>
            </PropertyGroup>
        </When>
        <Otherwise>
            <!-- Use Slice files and Slice compiler from this NuGet package -->
            <PropertyGroup>
                <IceRpcToolsToolsPath>$(MSBuildThisFileDirectory)..\tools</IceRpcToolsToolsPath>
                <IceRpcToolsBuiltInReferencedFiles>$(MSBuildThisFileDirectory)..\slice</IceRpcToolsBuiltInReferencedFiles>
            </PropertyGroup>
        </Otherwise>
    </Choose>

    <Choose>
        <When Condition="Exists('$(MSBuildThisFileDirectory)bin\$(Configuration)\netstandard2.0\IceRpc.Tools.dll')">
            <PropertyGroup>
                <IceRpcToolsAssembliesPath>$(MSBuildThisFileDirectory)bin\$(Configuration)\netstandard2.0\</IceRpcToolsAssembliesPath>
            </PropertyGroup>
        </When>
        <Otherwise>
            <PropertyGroup>
                <IceRpcToolsAssembliesPath>$(MSBuildThisFileDirectory)..\tasks\</IceRpcToolsAssembliesPath>
            </PropertyGroup>
        </Otherwise>
    </Choose>
    <!-- default values -->
    <ItemDefinitionGroup>
        <SliceC>
            <OutputDir>$(MSBuildProjectDirectory)\generated</OutputDir>
        </SliceC>
    </ItemDefinitionGroup>
</Project>
