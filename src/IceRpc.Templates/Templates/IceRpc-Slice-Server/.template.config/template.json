{
    "$schema": "http://json.schemastore.org/template",
    "author": "ZeroC",
    "classifications": [
        "IceRPC",
        "Server",
        "Slice"
    ],
    "identity": "IceRpc.Slice.Server",
    "name": "IceRPC + Slice Server",
    "description": "A project template for creating an IceRPC + Slice server console application.",
    "shortName": "icerpc-slice-server",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "IceRpc-Slice-Server",
    "preferNameDirectory": true,
    "defaultName": "Server",
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net8.0",
                    "description": "Target net8.0"
                },
                {
                "choice": "net9.0",
                "description": "Target net9.0"
                }
            ],
            "replaces": "net8.0",
            "defaultValue": "net8.0"
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        },
        "transport": {
            "type": "parameter",
            "description": "The transport to use for IceRPC connections.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "quic",
                    "description": "Use the QUIC transport"
                },
                {
                    "choice": "tcp",
                    "description": "Use the TCP transport"
                }
            ],
            "defaultValue": "tcp",
            "replaces": "tcp"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "rename": {
                        "editorconfig": ".editorconfig"
                    }
                },
                {
                    "condition": "(transport == 'tcp')",
                    "exclude": [
                        "certs/*"
                    ]
                }
            ]
        },
        {
            "source": "../../",
            "include": ["CodeAnalysis.globalconfig"],
            "target": "./"
        }
    ],
    "SpecialCustomOperations": {
        "editorconfig": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "actionableIf": [
                            "#if"
                        ],
                        "actionableElse": [
                            "#else"
                        ],
                        "actionableElseif": [
                            "#elseif"
                        ],
                        "endif": [
                            "#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        }
    },
    "primaryOutputs": [
        {
            "path": "IceRpc-Slice-Server.csproj"
        }
    ],
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}
