{
    "$schema": "http://json.schemastore.org/template",
    "author": "ZeroC",
    "classifications": [
        "IceRPC",
        "Server",
        "Slice"
    ],
    "identity": "IceRpc.Slice.Server.0.1",
    "name": "IceRPC + Slice Server",
    "description": "A project template for creating an IceRPC + Slice server console application.",
    "shortName": "icerpc-slice-server",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "IceRpc-Slice-Server",
    "preferNameDirectory": true,
    "defaultName": "Server",
    "symbols": {
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        },
        "transport": {
            "type": "parameter",
            "description": "The transport to use for IceRPC connections.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "quic",
                    "description": "Use QUIC transport"
                },
                {
                    "choice": "slic",
                    "description": "Use slic transport"
                }
            ],
            "defaultValue": "slic",
            "replaces": "slic"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "rename": {
                        "editorconfig": ".editorconfig"
                    }
                },
                {
                    "condition": "(transport == 'quic')",
                    "exclude": [
                        "slic/*"
                    ],
                    "rename": {
                        "quic/Program.cs": "Program.cs",
                        "quic/IceRpc-Slice-Server.csproj": "IceRpc-Slice-Server.csproj"
                    }
                },
                {
                    "condition": "(transport == 'slic')",
                    "exclude": [
                        "quic/*",
                        "certs/*"
                    ],
                    "rename": {
                        "slic/Program.cs": "Program.cs",
                        "slic/IceRpc-Slice-Server.csproj": "IceRpc-Slice-Server.csproj"
                    }
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/*.xaml": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "actionableIf": [
                            "<!--#if"
                        ],
                        "actionableElse": [
                            "#else",
                            "<!--#else"
                        ],
                        "actionableElseif": [
                            "#elseif",
                            "<!--#elseif"
                        ],
                        "endif": [
                            "#endif",
                            "<!--#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        },
        "editorconfig": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "actionableIf": [
                            "<!--#if"
                        ],
                        "actionableElse": [
                            "#else",
                            "<!--#else"
                        ],
                        "actionableElseif": [
                            "#elseif",
                            "<!--#elseif"
                        ],
                        "endif": [
                            "#endif",
                            "<!--#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        }
    },
    "primaryOutputs": [
        {
            "path": "IceRpc-Slice-Server.csproj"
        }
    ],
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}
