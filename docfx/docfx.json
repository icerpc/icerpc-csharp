{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "src/*/*.csproj",
                    ],
                    "exclude": [
                        "src/IceRpc.ProjectTemplates/**"
                    ],
                    "src": "../"
                }
            ],
            "dest": "api",
            "includePrivateMembers": false,
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "noRestore": false,
            "namespaceLayout": "flattened"
        }
    ],
    "build": {
        "xrefService":[
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "content": [
            {
                "files": [
                    "api/**.yml"
                ]
            },
            {
                "files": [
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "overwrite/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default",
            "modern",
            "template"
        ],
        "postProcessors": ["ExtractSearchIndex"],
        "noLangKeyword": false,
        "keepFileLink": false,
        "disableGitFeatures": false,
        "globalMetadata":{
            "_appTitle":"IceRPC",
            "_appName":"IceRPC",
            "_appFaviconPath":"images/favicon.ico",
            "_appLogoPath":"images/logo.svg",
            "_appFooter":"<strong>IceRPC</strong>",
            "_copyrightFooter":"Copyright Â© ZeroC, Inc.",
            "_enableSearch": true,
            "_gitContribute": {
                "repo": "https://github.com/icerpc/icerpc-csharp",
                "branch": "main",
                "apiSpecFolder": "docs-overwrite"
            }
        }
    }
}
